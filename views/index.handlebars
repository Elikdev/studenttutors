{{#if success}}
{{else}}
<div class="registration" id="registration">
    <span class="close" id="close" onclick=" document.getElementById('registration').style.display='none'">
        &times;
    </span>
    <form action="/user/login" method="post" class="login-form">

        <div class="form-container">
            {{#if errors}}
            <section class="errors">
                <ul>
                    {{#each errors}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </section>
            {{/if}}
            {{#if errors}}
            <div class="img-thumb">
                <img src="/img/avatar1.png" alt="Avatar" class="avatar" style="border: 6px solid #e26a8e" />
            </div>
            {{else}}
            <div class="img-thumb">
                <img src="/img/avatar1.png" alt="Avatar" class="avatar" />
            </div>
            {{/if}}

            <div class="login-group1">
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="email@example.com" value="{{body.email}}" />
            </div>
            <div class="login-group1">
                <label for="password">Password</label>
                <input type="password" name="password" placeholder="Enter your password" />
            </div>
            <label class="rmb"><input type="checkbox" checked="checked" name="remember" />
                Remember me</label>
            <button type="submit" name="login">Sign In</button>

            <div class="others">
                <span class="fpass">Forgot Password?</span>
                <span class="sign-up">
                    Not yet registered?
                    <a href="/user/register" class="registerbutton" id="register2">Sign up</a>
                </span>
            </div>
        </div>
    </form>
</div>
{{/if}}


{{#if success}}
{{else}}
<div class="registration2" id="registration2">
    <span class="close" onclick=" document.getElementById('registration2').style.display='none'">
        &times;
    </span>
    <form action="/user/register" method="post" class="login-form">

        <div class="form-container">
            {{#if errors}}
            <section class="errors">
                <ul>
                    {{#each errors}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </section>
            {{/if}}
            <div class="img-thumb">
                <h2>Registration Form</h2>
                <p>Please fill in the form to create an account</p>
            </div>
            <div class="login-group1">
                <label for="fullname">Fullname</label>
                <input type="text" name="fullname" placeholder="Your name" value="{{body.fullname}}" />
            </div>
            <div class="login-group1">
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="email@example.com" value="{{body.email}}" />
            </div>
            <div class="login-group1">
                <label for="level">Level</label>
                <select name="level" id="level">
                    {{#if body.level }}
                    <option value="{{body.level}}">{{body.level}}</option>
                    {{/if}}
                    <option value="Select Value">--Select Level--</option>
                    <option value="JSS">Junior Secondary(JSS)</option>
                    <option value="SSS">Senior Secondary(SSS)</option>
                    <option value="100L">100 Level(100L)</option>
                    <option value="200L">200 Level(200L)</option>
                    <option value="300L">300 Level(300L)</option>
                    <option value="400L">400 Level(400L)</option>
                    <option value="500L">500 Level(500L)</option>
                </select>
            </div>
            <div class="login-group1">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" />
            </div>
            <div class="login-group1">
                <label for="profile_details">Bio</label>
                <textarea name="profile_details" id="profile_details"
                    placeholder="Little details about yourself">{{body.profile_details}}</textarea>
                <label class="rmb"><input type="checkbox" checked="checked" name="remember" />
                    Remember me</label>
            </div>
            <button type="submit" name="register">Sign up</button>

            <div class="others">
                <span class="fpass">By signing up, you agree to our
                    <a href="http://"> Terms of privacy</a></span>
                <span class="sign-up">
                    Already registered? <a href="/user/login" id="login2">Sign in</a>
                </span>
            </div>
        </div>
    </form>
</div>
{{/if}}


<section class="section">
    <div class="glide">
        <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides trim">
                <li class="glide__slide">
                    <img src="/img/glide1-sm.jpg" alt="classroom Interactions" />
                </li>
                <li class="glide__slide">
                    <img src="/img/glide2-sm.jpg" alt="classroom Interactions" />
                </li>
                <li class="glide__slide">
                    <img src="/img/glide3-sm.jpg" alt="classroom Interactions" />
                </li>
            </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
            <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
                prev
            </button>
            <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
                next
            </button>
        </div>
        <div class="glide__bullets" data-glide-el="controls[nav]">
            <button class="glide__bullet" data-glide-dir="=0"></button>
            <button class="glide__bullet" data-glide-dir="=1"></button>
            <button class="glide__bullet" data-glide-dir="=2"></button>
        </div>
    </div>
</section>

